@page "/compare"
@using BazaarCompanionWeb.Dtos
@using BazaarCompanionWeb.Entities
@implements IAsyncDisposable
@rendermode InteractiveServer

<PageTitle>Compare Products | Bazaar Maxxing</PageTitle>

<div class="flex flex-col gap-6 w-full max-w-[1920px] mx-auto animate-in fade-in slide-in-from-bottom-2 duration-500">
    <!-- Page Header -->
    <div class="flex items-center justify-between border-b border-slate-800/60 pb-4">
        <div class="flex items-center gap-4">
            <a href="/" class="group flex items-center gap-2 text-slate-400 hover:text-white transition-colors">
                <i class="ph ph-arrow-left text-lg group-hover:-translate-x-1 transition-transform"></i>
                <span class="text-sm font-medium">Back</span>
            </a>
            <div class="h-6 w-px bg-slate-700"></div>
            <div class="flex flex-col">
                <h1 class="text-2xl font-bold tracking-tight text-white leading-none">
                    <i class="ph ph-git-diff text-blue-400 mr-2"></i>
                    Compare Products
                </h1>
                <span class="text-xs text-slate-500 mt-1">Overlay normalized price movements</span>
            </div>
        </div>

        @if (_productKeys.Count > 0)
        {
            <button @onclick="ClearAll"
                    class="flex items-center gap-2 px-3 py-1.5 rounded-lg text-xs font-medium text-slate-400 hover:text-red-400 hover:bg-red-500/10 border border-slate-700/50 transition-all">
                <i class="ph ph-trash"></i>
                Clear All
            </button>
        }
    </div>

    <!-- Product Selection Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        @foreach (var productKey in _productKeys)
        {
            var product = _productData.GetValueOrDefault(productKey);
            <div class="group relative rounded-xl border border-slate-700/50 bg-slate-900/60 p-4 backdrop-blur-md transition-all hover:border-slate-600">
                <button @onclick="@(() => RemoveProduct(productKey))"
                        class="absolute top-2 right-2 p-1 rounded-lg text-slate-600 hover:text-red-400 hover:bg-red-500/10 opacity-0 group-hover:opacity-100 transition-all">
                    <i class="ph ph-x text-sm"></i>
                </button>

                @if (product is not null)
                {
                    <a href="/product/@productKey" class="block">
                        <h3 class="font-medium text-slate-200 truncate hover:text-blue-400 transition-colors">
                            @product.ItemFriendlyName
                        </h3>
                        <div class="flex items-center justify-between mt-3 text-xs">
                            <span class="text-slate-500">Bid</span>
                            <span class="font-mono text-slate-300">@((product.BuyOrderUnitPrice ?? 0).ToString("N1"))</span>
                        </div>
                        <div class="flex items-center justify-between mt-1 text-xs">
                            <span class="text-slate-500">Ask</span>
                            <span class="font-mono text-slate-300">@((product.SellOrderUnitPrice ?? 0).ToString("N1"))</span>
                        </div>
                    </a>
                }
                else
                {
                    <div class="flex items-center gap-2">
                        <span class="font-mono text-sm text-slate-400 truncate">@productKey</span>
                        <div class="h-3 w-3 animate-spin rounded-full border-2 border-slate-600 border-t-blue-500"></div>
                    </div>
                }
            </div>
        }

        @if (_productKeys.Count < 4)
        {
            <div class="flex flex-col items-center justify-center rounded-xl border border-dashed border-slate-700/50 bg-slate-900/30 p-6 min-h-[120px]">
                <div class="relative w-full max-w-[200px]">
                    <input type="text"
                           @bind="_searchQuery"
                           @bind:event="oninput"
                           placeholder="Search products..."
                           class="w-full px-3 py-2 rounded-lg border border-slate-700/50 bg-slate-800/50 text-sm text-slate-300 placeholder-slate-600 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-all"/>
                </div>
                
                @if (_searchResults.Any())
                {
                    <div class="mt-2 w-full max-w-[200px] max-h-[150px] overflow-auto rounded-lg border border-slate-700/50 bg-slate-900/95 backdrop-blur-xl shadow-xl">
                        @foreach (var result in _searchResults.Take(5))
                        {
                            <button @onclick="@(() => AddProduct(result.ItemId))"
                                    class="w-full text-left px-3 py-2 text-xs text-slate-300 hover:bg-slate-800 hover:text-white transition-colors truncate">
                                @result.ItemFriendlyName
                            </button>
                        }
                    </div>
                }
                else if (!string.IsNullOrEmpty(_searchQuery))
                {
                    <p class="mt-2 text-xs text-slate-600">No products found</p>
                }
                else
                {
                    <p class="mt-2 text-xs text-slate-500">Add products from their detail pages</p>
                }
            </div>
        }
    </div>

    <!-- Comparison Chart -->
    @if (_productKeys.Count > 0)
    {
        <div class="rounded-xl border border-slate-700/50 bg-slate-900/60 shadow-xl backdrop-blur-xl overflow-hidden">
            <div class="flex items-center justify-between p-4 border-b border-slate-800/50">
                <h2 class="text-sm font-bold text-white flex items-center gap-2">
                    <i class="ph ph-chart-line-up text-blue-400"></i>
                    Normalized Price Comparison
                </h2>
                <div class="flex items-center gap-2">
                    @foreach (var interval in _intervals)
                    {
                        <button @onclick="@(() => SetInterval(interval.Value))"
                                class="@GetIntervalButtonClasses(interval.Value)">
                            @interval.Label
                        </button>
                    }
                </div>
            </div>
            <div class="relative w-full h-[400px] p-4">
                @if (_loading)
                {
                    <div class="absolute inset-0 flex flex-col items-center justify-center">
                        <div class="h-1 w-32 overflow-hidden rounded-full bg-slate-800">
                            <div class="h-full w-full origin-left animate-[indeterminate_1s_infinite_linear] bg-blue-500"></div>
                        </div>
                        <p class="mt-3 text-xs text-slate-500 animate-pulse">Loading chart data...</p>
                    </div>
                }
                else
                {
                    <div id="comparison-chart-@_chartId" class="absolute inset-4"></div>
                }
            </div>
            <div class="px-4 pb-4">
                <p class="text-[10px] text-slate-600 text-center">
                    <i class="ph ph-info mr-1"></i>
                    Values normalized to % change from first data point for each product
                </p>
            </div>
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="flex flex-col items-center justify-center py-20 rounded-xl border border-dashed border-slate-700/50 bg-slate-900/30">
            <i class="ph ph-git-diff text-5xl text-slate-700 mb-4"></i>
            <h2 class="text-lg font-medium text-slate-400 mb-2">No products to compare</h2>
            <p class="text-sm text-slate-600 text-center max-w-md mb-6">
                Add products from their detail pages using the "Compare" button, or search for products above.
            </p>
            <a href="/" class="px-4 py-2 rounded-lg bg-blue-600 hover:bg-blue-500 text-white text-sm font-medium transition-colors">
                Browse Products
            </a>
        </div>
    }

    <!-- Legend -->
    @if (_productKeys.Count > 0)
    {
        <div class="flex flex-wrap items-center justify-center gap-4 p-4 rounded-xl border border-slate-700/50 bg-slate-900/40">
            @for (var i = 0; i < _productKeys.Count; i++)
            {
                var productKey = _productKeys[i];
                var product = _productData.GetValueOrDefault(productKey);
                var color = _colors[i % _colors.Length];
                <div class="flex items-center gap-2">
                    <div class="w-3 h-3 rounded-full" style="background-color: @color"></div>
                    <span class="text-xs text-slate-300">@(product?.ItemFriendlyName ?? productKey)</span>
                </div>
            }
        </div>
    }
</div>
