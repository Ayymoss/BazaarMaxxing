@using System.Globalization

<div class="group relative overflow-hidden rounded-xl border border-slate-700/50 bg-slate-800/40 px-3 py-2.5 shadow-md backdrop-blur-md transition-all duration-300 hover:border-slate-600/50 hover:bg-slate-800/60">
    <div class="absolute inset-0 -z-10 bg-gradient-to-br from-white/5 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100"></div>
    
    <div class="flex flex-col">
        <div class="flex items-center justify-between mb-0.5">
            <p class="text-[10px] font-semibold uppercase tracking-wider text-slate-500 group-hover:text-slate-400 transition-colors">@Title</p>
            <div class="flex items-center gap-1 rounded-md bg-slate-900/50 px-1.5 py-px backdrop-blur-sm">
                <i class="@_iconClass @_iconColor text-[10px]"></i>
                <span class="text-[10px] font-medium @_textColor">@_percentage.ToString("P1")</span>
            </div>
        </div>
        
        <div class="flex items-baseline gap-2">
            <p class="text-lg font-bold tracking-tight text-slate-200">
                @(Value.ToString("C2", CultureInfo.CreateSpecificCulture("en-US")))
            </p>
        </div>
        
        <p class="text-[10px] text-slate-600 font-mono mt-0.5">
            Ref: @(ReferenceValue.ToString("C2", CultureInfo.CreateSpecificCulture("en-US")))
        </p>
    </div>
</div>
