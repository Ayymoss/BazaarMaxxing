@using BazaarCompanionWeb.Dtos
@using BazaarCompanionWeb.Utilities
@using Microsoft.AspNetCore.Components

<div class="flex flex-col gap-4">
    <!-- Trending Products -->
    <div class="rounded-xl border border-slate-700/50 bg-slate-900/60 shadow-xl backdrop-blur-xl p-4">
        <h3 class="text-lg font-bold text-white flex items-center gap-2 mb-4">
            <i class="ph ph-trend-up text-green-400"></i>
            Trending Products
        </h3>

        @if (!TrendingProducts.Any())
        {
            <div class="flex flex-col items-center justify-center py-12 text-slate-500">
                <i class="ph ph-chart-line text-4xl mb-2"></i>
                <p class="text-sm">No trend data available</p>
            </div>
        }
        else
        {
            <div class="space-y-2">
                @foreach (var trend in TrendingProducts)
                {
                    var trendColor = trend.TrendDirection switch
                    {
                        "Bullish" => "#78F86A",
                        "Bearish" => "#EF4444",
                        "Volatile" => "#F9AD35",
                        _ => "#808080"
                    };

                    <div class="flex items-center justify-between p-2 rounded-lg border border-slate-700/50 bg-slate-800/40 hover:bg-slate-800/60 transition-colors">
                        <div class="flex items-center gap-3 flex-1 min-w-0">
                            <div class="flex-shrink-0">
                                <div class="w-2 h-2 rounded-full" style="background-color: @trendColor;"></div>
                            </div>
                            <div class="flex-1 min-w-0">
                                <p class="text-sm font-medium text-slate-200 truncate">@trend.ProductName</p>
                                <p class="text-xs text-slate-500">@trend.TrendDirection</p>
                            </div>
                        </div>
                        <div class="flex items-center gap-4 text-xs">
                            <div class="text-right">
                                <p class="text-slate-400">6h</p>
                                <p class="font-mono" style="color: @(trend.PriceChange6h >= 0 ? "#78F86A" : "#EF4444")">
                                    @(trend.PriceChange6h >= 0 ? "+" : "")@trend.PriceChange6h.ToString("F2")%
                                </p>
                            </div>
                            <div class="text-right">
                                <p class="text-slate-400">24h</p>
                                <p class="font-mono" style="color: @(trend.PriceChange24h >= 0 ? "#78F86A" : "#EF4444")">
                                    @(trend.PriceChange24h >= 0 ? "+" : "")@trend.PriceChange24h.ToString("F2")%
                                </p>
                            </div>
                            <div class="text-right">
                                <p class="text-slate-400">7d</p>
                                <p class="font-mono" style="color: @(trend.PriceChange7d >= 0 ? "#78F86A" : "#EF4444")">
                                    @(trend.PriceChange7d >= 0 ? "+" : "")@trend.PriceChange7d.ToString("F2")%
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <!-- Market Heatmap -->
    @if (HeatmapData != null && HeatmapData.Points.Any())
    {
        <div class="rounded-xl border border-slate-700/50 bg-slate-900/60 shadow-xl backdrop-blur-xl p-4">
            <h3 class="text-lg font-bold text-white flex items-center gap-2 mb-4">
                <i class="ph ph-grid-four text-purple-400"></i>
                Market Heatmap
            </h3>
            <div class="text-xs text-slate-400 mb-3">
                Volatility (X-axis) vs Volume (Y-axis). Color intensity = Opportunity Score.
            </div>
            
            <div class="relative w-full h-96 border border-slate-700/50 rounded-lg bg-slate-900/50 overflow-hidden">
                @foreach (var point in HeatmapData.Points)
                {
                    var colorIntensity = Math.Min(1.0, point.OpportunityScore / 10.0);
                    var color = $"rgba(59, 130, 246, {colorIntensity})"; // Blue with intensity based on opportunity score
                    
                    <div class="absolute rounded-sm group cursor-pointer hover:ring-2 hover:ring-blue-500/50 transition-all"
                         style="left: @(point.X * 100)%; bottom: @(point.Y * 100)%; width: 8px; height: 8px; background-color: @color;"
                         title="@($"{point.ProductName}: Vol={point.Volatility:F2}, Vol={point.Volume:N0}, Score={point.OpportunityScore:F2}")">
                        <div class="absolute bottom-full left-1/2 transform -translate-x-1/2 mb-1 px-2 py-1 bg-slate-800 text-xs text-white rounded opacity-0 group-hover:opacity-100 pointer-events-none whitespace-nowrap z-10">
                            @point.ProductName
                        </div>
                    </div>
                }
                
                <!-- Axis labels -->
                <div class="absolute bottom-0 left-0 right-0 flex justify-between px-2 text-[10px] text-slate-500">
                    <span>Low Volatility</span>
                    <span>High Volatility</span>
                </div>
                <div class="absolute top-0 bottom-0 left-0 flex flex-col justify-between py-2 text-[10px] text-slate-500 writing-vertical-rl">
                    <span>Low Volume</span>
                    <span>High Volume</span>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public List<ProductTrend> TrendingProducts { get; set; } = new();
    [Parameter] public MarketHeatmapData? HeatmapData { get; set; }
}
