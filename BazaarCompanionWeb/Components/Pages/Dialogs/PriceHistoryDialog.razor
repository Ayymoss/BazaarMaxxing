@using System.Globalization
@using BazaarCompanionWeb.Components.Pages.Dialogs.Components
@using BazaarCompanionWeb.Components.Pages.Components
@using BazaarCompanionWeb.Utilities
@using Humanizer

<div class="flex flex-col gap-4 animate-in fade-in zoom-in-95 duration-200 h-full max-h-[85vh] overflow-y-auto overscroll-contain px-1 pb-4 scrollbar-thin scrollbar-track-transparent scrollbar-thumb-slate-800/50">
    <!-- Compact Header -->
    <div class="flex items-center justify-between border-b border-slate-800/60 pb-3 pr-10">
        <div class="flex items-center gap-3">
            <div class="flex flex-col">
                <h3 class="text-xl font-bold tracking-tight text-white leading-none">
                    @Product.ItemFriendlyName
                </h3>
                <div class="flex items-center gap-2 mt-1 text-[10px] text-slate-500">
                     <span class="flex h-1.5 w-1.5 rounded-full bg-emerald-500"></span>
                     <span>Updated @(_lastServerRefresh?.Humanize() ?? "...")</span>
                </div>
            </div>
        </div>
        
        <!-- Top Level Stats (Mini) -->
        <div class="hidden sm:flex items-center gap-4 text-xs">
            <div class="flex flex-col items-end">
                <span class="text-slate-500 uppercase tracking-wider text-[10px]">Tier</span>
                <span class="font-medium" style="@($"color: {Product.ItemTier.ProductTierColor()}")">@Product.ItemTier.Humanize()</span>
            </div>
            <div class="h-6 w-px bg-slate-800"></div>
            <div class="flex flex-col items-end">
                <span class="text-slate-500 uppercase tracking-wider text-[10px]">Profit</span>
                <span class="font-medium" style="@($"color: {Product.OrderMetaPotentialProfitMultiplier.MultiplierColor()}")">@($"{Product.OrderMetaPotentialProfitMultiplier:N2}x")</span>
            </div>
        </div>
    </div>

    @if (_loading)
    {
        <div class="flex flex-col items-center justify-center py-20">
            <div class="h-1 w-32 overflow-hidden rounded-full bg-slate-800">
                <div class="h-full w-full origin-left animate-[indeterminate_1s_infinite_linear] bg-blue-500"></div>
            </div>
            <p class="mt-3 text-xs text-slate-500 animate-pulse">Fetching market data...</p>
        </div>
    }
    else
    {
        <!-- Main Dashboard Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-3">
            
            <!-- Left Column: Metrics & Stats (4 cols) -->
            <div class="lg:col-span-4 flex flex-col gap-3">
                 <!-- Price Cards -->
                 @{ var history = GetLastPriceHistoryAverage(); }
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-1 gap-2">
                    <StatCard @ref="_buyRef" Title="Bid Price (Buy)" Value="@(Product.BuyOrderUnitPrice ?? double.MaxValue)"
                              ReferenceValue="@history.Buy"/>
                    <StatCard @ref="_sellRef" Title="Ask Price (Sell)" Value="@(Product.SellOrderUnitPrice ?? 0.1)" Inverse="true"
                              ReferenceValue="@history.Sell"/>
                    <StatCard @ref="_spreadRef" Title="Market Spread" Value="@(Product.OrderMetaMargin)"
                              ReferenceValue="@(history.Buy - history.Sell)"/>
                </div>

                <!-- Secondary Metrics Grid -->
                <div class="grid grid-cols-2 gap-2">
                    <ValueCard Title="Rating"
                               Value="@(Product.OrderMetaFlipOpportunityScore.ToString("N2"))"
                               ValueStyle="@($"color: {Product.OrderMetaFlipOpportunityScore.RatingColor()}")"/>
                     <ValueCard Title="7d Vol" Value="@Product.OrderMetaTotalWeekVolume.ToString("N0")"/>
                    <ValueCard Title="Buy Vol" Value="@Product.BuyOrderWeekVolume.ToString("N0")"/>
                    <ValueCard Title="Sell Vol" Value="@Product.SellOrderWeekVolume.ToString("N0")"/>
                </div>
            </div>

            <!-- Right Column: Chart (8 cols) -->
            <div class="lg:col-span-8 h-full flex flex-col gap-2">
                 <PriceGraph Product="Product" Interval="@_selectedInterval" IntervalChanged="@OnIntervalChangedAsync"/>
                 
                 <!-- Product Comparison -->
                 <ProductComparison CurrentProductKey="@Product.ItemId" />
            </div>
        </div>

        <!-- Order Books -->
        @if (Product.BuyBook is not null && Product.SellBook is not null)
        {
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-3 mt-1">
                <!-- Bid Orders -->
                <div class="flex flex-col gap-1.5">
                    <h4 class="flex items-center justify-between text-[10px] font-semibold uppercase tracking-wider text-red-400 px-1">
                        <span><i class="ph ph-trend-down mr-1"></i> Bid Depth</span>
                        <span class="text-slate-600">Buyers</span>
                    </h4>
                    <div class="overflow-hidden rounded-lg border border-red-900/20 bg-slate-900/30 shadow-inner">
                        <div class="max-h-[240px] overflow-auto scrollbar-thin scrollbar-track-transparent scrollbar-thumb-slate-700">
                            <table class="w-full text-xs text-left">
                                <thead class="sticky top-0 z-10 bg-slate-900 text-slate-500 shadow-sm">
                                    <tr>
                                        <th class="px-3 py-2 font-medium">Price</th>
                                        <th class="px-3 py-2 font-medium text-right">Qty</th>
                                        <th class="px-3 py-2 font-medium text-right">Orders</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-slate-800/50">
                                    @foreach (var order in Product.BuyBook)
                                    {
                                        <tr class="group hover:bg-red-500/5 transition-colors">
                                            <td class="px-3 py-1.5 font-mono text-slate-300 group-hover:text-red-200">@order.UnitPrice.ToString("N1")</td>
                                            <td class="px-3 py-1.5 text-right text-slate-500 group-hover:text-slate-400">@order.Amount.ToString("N0")</td>
                                            <td class="px-3 py-1.5 text-right text-slate-600 group-hover:text-slate-500">@order.Orders.ToString("N0")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Ask Orders -->
                <div class="flex flex-col gap-1.5">
                    <h4 class="flex items-center justify-between text-[10px] font-semibold uppercase tracking-wider text-green-400 px-1">
                        <span><i class="ph ph-trend-up mr-1"></i> Ask Depth</span>
                        <span class="text-slate-600">Sellers</span>
                    </h4>
                    <div class="overflow-hidden rounded-lg border border-green-900/20 bg-slate-900/30 shadow-inner">
                        <div class="max-h-[240px] overflow-auto scrollbar-thin scrollbar-track-transparent scrollbar-thumb-slate-700">
                            <table class="w-full text-xs text-left">
                                <thead class="sticky top-0 z-10 bg-slate-900 text-slate-500 shadow-sm">
                                    <tr>
                                        <th class="px-3 py-2 font-medium">Price</th>
                                        <th class="px-3 py-2 font-medium text-right">Qty</th>
                                        <th class="px-3 py-2 font-medium text-right">Orders</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-slate-800/50">
                                    @foreach (var order in Product.SellBook)
                                    {
                                        <tr class="group hover:bg-green-500/5 transition-colors">
                                            <td class="px-3 py-1.5 font-mono text-slate-300 group-hover:text-green-200">@order.UnitPrice.ToString("N1")</td>
                                            <td class="px-3 py-1.5 text-right text-slate-500 group-hover:text-slate-400">@order.Amount.ToString("N0")</td>
                                            <td class="px-3 py-1.5 text-right text-slate-600 group-hover:text-slate-500">@order.Orders.ToString("N0")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Advanced Order Book Analysis (Toggleable) -->
        @if (Product.BuyBook is not null && Product.SellBook is not null)
        {
            <div class="mt-4">
                <button @onclick="ToggleOrderBookAnalysis"
                        class="w-full flex items-center justify-between p-3 rounded-xl border border-slate-700/50 bg-slate-900/60 hover:bg-slate-800/60 transition-all cursor-pointer">
                    <div class="flex items-center gap-2">
                        <i class="ph ph-chart-scatter text-blue-400"></i>
                        <span class="text-sm font-bold text-white">Advanced Order Book Analysis</span>
                        @if (_orderBookAnalysis is not null)
                        {
                            <span class="px-2 py-0.5 rounded-full bg-blue-500/20 text-blue-300 text-[10px]">
                                @(_orderBookAnalysis.WhaleOrders.Count > 0 ? $"{_orderBookAnalysis.WhaleOrders.Count} whales" : "Active")
                            </span>
                        }
                    </div>
                    <i class="ph @(_showOrderBookAnalysis ? "ph-caret-up" : "ph-caret-down") text-slate-400"></i>
                </button>

                @if (_showOrderBookAnalysis && _orderBookAnalysis is not null)
                {
                    <div class="mt-3 flex flex-col gap-3 animate-in fade-in slide-in-from-top-2 duration-200">
                        <!-- Top Row: Imbalance + Whales -->
                        <div class="grid grid-cols-1 lg:grid-cols-2 gap-3">
                            <ImbalanceGauge Imbalance="@_orderBookAnalysis.Imbalance" />
                            <WhaleOrders Orders="@_orderBookAnalysis.WhaleOrders" />
                        </div>

                        <!-- Depth Chart -->
                        <OrderBookDepth DepthMetrics="@_orderBookAnalysis.DepthMetrics"
                                        DepthChart="@_orderBookAnalysis.DepthChart" />

                        <!-- Support/Resistance from Order Book -->
                        <OrderBookSupportResistance
                            SupportLevels="@_orderBookAnalysis.SupportLevels"
                            ResistanceLevels="@_orderBookAnalysis.ResistanceLevels" />

                        <!-- Heatmap -->
                        <OrderBookHeatmap ProductKey="@Product.ItemId" />
                    </div>
                }
            </div>
        }

        <!-- Related Products -->
        @if (_relatedProducts.Any())
        {
            <div class="mt-4 rounded-xl border border-slate-700/50 bg-slate-900/60 shadow-xl backdrop-blur-xl p-4">
                <h4 class="text-sm font-bold text-white flex items-center gap-2 mb-3">
                    <i class="ph ph-link text-blue-400"></i>
                    Related Products
                </h4>
                <div class="text-xs text-slate-400 mb-3">
                    Products with similar price movements (correlation > 0.7)
                </div>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-2">
                    @foreach (var related in _relatedProducts)
                    {
                        var correlationColor = related.CorrelationType switch
                        {
                            "Strong" => "#78F86A",
                            "Moderate" => "#F9AD35",
                            _ => "#808080"
                        };
                        
                        <div class="group p-2 rounded-lg border border-slate-700/50 bg-slate-800/40 hover:bg-slate-800/60 hover:border-blue-500/50 transition-all cursor-pointer"
                             @onclick="@(() => NavigateToProduct(related.ProductKey))">
                            <p class="text-xs font-medium text-slate-200 truncate mb-1 group-hover:text-blue-400 transition-colors">
                                @related.ProductName
                            </p>
                            <div class="flex items-center justify-between">
                                <span class="text-[10px] text-slate-500">@related.CorrelationType</span>
                                <span class="text-[10px] font-mono" style="color: @correlationColor">
                                    @related.Correlation.ToString("F2")
                                </span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        <div class="flex items-center justify-center mt-2">
            <p class="text-[10px] text-slate-600 bg-slate-800/30 px-3 py-1 rounded-full">
                <i class="ph ph-info mr-1"></i> Market depth displays active orders. % change based on 12h EMA.
            </p>
        </div>
    }
</div>
