<RadzenCard Variant="Variant.Filled">
    <RadzenChart Style="width: 100%" class="rz-mb-6">
        <RadzenChartTooltipOptions Shared="true"/>
        <RadzenAreaSeries Smooth="true" Data="@Product.PriceHistory" CategoryProperty="Date" Title="Buy" ValueProperty="Buy"
                          Stroke="var(--rz-success)" Fill="var(--rz-success-lighter)">
            <RadzenMarkers Visible="true" MarkerType="MarkerType.Circle"/>
        </RadzenAreaSeries>
        <RadzenAreaSeries Smooth="true" Data="@Product.PriceHistory" CategoryProperty="Date" Title="Sell" ValueProperty="Sell"
                          Stroke="var(--rz-danger)" Fill="var(--rz-danger-lighter)">
            <RadzenMarkers Visible="true" MarkerType="MarkerType.Circle"/>
        </RadzenAreaSeries>
        <RadzenCategoryAxis Padding="20" LabelAutoRotation="35" Formatter="AxisFormat"/>
        <RadzenValueAxis Formatter="ValueFormat">
            <RadzenGridLines Visible="true"/>
        </RadzenValueAxis>
        <RadzenLegend Visible="false"/>
    </RadzenChart>
</RadzenCard>
