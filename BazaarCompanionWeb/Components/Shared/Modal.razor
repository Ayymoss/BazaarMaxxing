@if (Show)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center p-4" role="dialog" aria-modal="true">
        <!-- Backdrop -->
        <div class="fixed inset-0 bg-slate-950/80 backdrop-blur-sm transition-opacity animate-in fade-in duration-200" 
             @onclick="HandleBackdropClick"></div>

        <!-- Modal Panel -->
        <div class="relative z-50 flex w-full max-w-5xl flex-col overflow-hidden rounded-2xl border border-slate-700/50 bg-slate-900/95 shadow-2xl backdrop-blur-xl animate-in fade-in zoom-in-95 slide-in-from-bottom-2 duration-300 max-h-[85vh]"
             @onclick:stopPropagation="true">
            
            @if (ShowClose)
            {
                <button @onclick="Close" 
                        class="absolute right-3 top-3 z-10 flex h-7 w-7 items-center justify-center rounded-md bg-slate-800/50 text-slate-400 ring-1 ring-inset ring-slate-700/50 transition-all hover:bg-slate-700 hover:text-white hover:ring-slate-600 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <i class="ph ph-x text-sm"></i>
                    <span class="sr-only">Close</span>
                </button>
            }

            <div class="flex-1 overflow-y-auto overflow-x-hidden p-4 sm:p-6 modal-body scrollbar-thin scrollbar-track-transparent scrollbar-thumb-slate-700">
                @ChildContent
            </div>
        </div>
    </div>
}
