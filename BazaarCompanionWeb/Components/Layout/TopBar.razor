@using BazaarCompanionWeb.Services
@rendermode InteractiveServer
@inject ComparisonStateService ComparisonState
@inject AboutModalService AboutModalService
@implements IDisposable

<div class="mx-auto flex h-16 w-full max-w-[1920px] items-center justify-between px-4 sm:px-6 lg:px-8">
    <!-- Logo & Title -->
    <div class="flex items-center gap-3">
        <div class="relative flex h-9 w-9 items-center justify-center rounded-xl bg-gradient-to-br from-blue-600 to-purple-600 shadow-lg shadow-blue-500/20 transition-transform hover:scale-105">
            <i class="ph ph-trend-up text-xl text-white"></i>
            <div class="absolute inset-0 rounded-xl ring-1 ring-inset ring-white/20"></div>
        </div>
        <div class="flex flex-col justify-center">
            <a href="/" class="bg-gradient-to-r from-blue-100 to-blue-50 bg-clip-text text-lg font-bold tracking-tight text-transparent hover:from-white hover:to-blue-100 transition-all">
                Bazaar Maxxing
            </a>
            <span class="hidden text-[10px] font-medium uppercase tracking-widest text-slate-500 sm:block">
                Hypixel Market Analytics
            </span>
        </div>
    </div>

    <!-- Search Bar -->
    <div class="hidden lg:flex flex-1 items-center justify-center px-8 max-w-2xl">
        <SearchBar />
    </div>

    <!-- Right Side Actions -->
    <div class="flex items-center gap-1 sm:gap-2">
        <a href="/compare" class="group relative rounded-lg p-2 text-slate-400 hover:bg-slate-800 hover:text-white transition-all">
            <i class="ph ph-git-diff text-xl"></i>
            @if (ComparisonState.Count > 0)
            {
                <span class="absolute -top-0.5 -right-0.5 flex h-4 w-4 items-center justify-center rounded-full bg-blue-600 text-[10px] font-bold text-white shadow-lg shadow-blue-500/30">
                    @ComparisonState.Count
                </span>
            }
            <span class="absolute -bottom-8 left-1/2 -translate-x-1/2 whitespace-nowrap rounded bg-slate-800 px-2 py-1 text-[10px] text-slate-200 opacity-0 transition-opacity group-hover:opacity-100 border border-slate-700">
                Compare
            </span>
        </a>
        <a href="/analytics" class="group relative rounded-lg p-2 text-slate-400 hover:bg-slate-800 hover:text-white transition-all">
            <i class="ph ph-chart-line text-xl"></i>
            <span class="absolute -bottom-8 left-1/2 -translate-x-1/2 whitespace-nowrap rounded bg-slate-800 px-2 py-1 text-[10px] text-slate-200 opacity-0 transition-opacity group-hover:opacity-100 border border-slate-700">
                Analytics
            </span>
        </a>
        <a href="https://github.com/Ayymoss" target="_blank" class="group relative rounded-lg p-2 text-slate-400 hover:bg-slate-800 hover:text-white transition-all">
            <i class="ph ph-github-logo text-xl"></i>
            <span class="absolute -bottom-8 left-1/2 -translate-x-1/2 whitespace-nowrap rounded bg-slate-800 px-2 py-1 text-[10px] text-slate-200 opacity-0 transition-opacity group-hover:opacity-100 border border-slate-700">
                GitHub
            </span>
        </a>
        <button @onclick="AboutModalService.Show" class="group relative rounded-lg p-2 text-slate-400 hover:bg-slate-800 hover:text-white transition-all">
            <i class="ph ph-info text-xl"></i>
            <span class="absolute -bottom-8 left-1/2 -translate-x-1/2 whitespace-nowrap rounded bg-slate-800 px-2 py-1 text-[10px] text-slate-200 opacity-0 transition-opacity group-hover:opacity-100 border border-slate-700">
                About
            </span>
        </button>
    </div>
</div>

@code {
    protected override void OnInitialized()
    {
        ComparisonState.OnChange += OnComparisonChanged;
    }

    private void OnComparisonChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        ComparisonState.OnChange -= OnComparisonChanged;
    }
}
